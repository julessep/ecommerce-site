extends index.pug

block content
  h3 Add New Payment Option 
  form(action="/postPayment", method="POST")
    .form-group
      label(for="cardNickname") Card Nickname:
      input(type="string", class="form-control",  name="cardNickname", placeholder="ex. Bangazon Credit Card")
    .form-group    
      label(for="cardNumber") Card Number:
      input(type="integer", placeholder="Please Enter Your Credit Card Number with No Spaces", class="form-control", name="cardNumber")   
      br
      button(class="btn btn-outline-secondary" type="submit") Submit